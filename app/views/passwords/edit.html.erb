<div class="w-72 md:w-96 m-auto rounded-xl border border-gray-300 bg-white py-4 px-8">
    <h1 class="text-3xl font-bold">Edit Password</h1>
    <%= form_with model: Current.user, local: true, data: { turbo: false }, url: edit_password_path do |form| %>
    <% if form.object.errors.any? %>
        <div class="alert alert-danger">
            <% form.object.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>
    <div class="my-4">
        <div class="mb-3">
            <%= form.password_field :password, class: "rounded-md w-full border-gray-300 shadow-sm", placeholder: "password" %>
        </div>
        <div class="mb-3">
            <%= form.password_field :password_confirmation, class: "rounded-md w-full border-gray-300 shadow-sm", placeholder: "password confirmation" %>
        </div>  
    </div>
    <div class="mb-3">
        <%= form.submit "Update Password", class: "shadow-sm border border-gray-400 px-4 py-2 rounded-md font-bold hover:bg-gray-100 ease-in-out duration-200" %>
    </div>
<%end %>
</div>
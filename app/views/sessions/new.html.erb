<div class="w-72 md:w-96 m-auto rounded-xl border border-gray-300 bg-white py-4 px-8">
    <h1 class="text-3xl font-bold">Sign In</h1>

    <%= form_with url: sign_in_path, local: true, data: { turbo: false } do |form| %>
        <div class="my-4">
            <div class="mb-3">
                <%= form.text_field :email, class: "rounded-md w-full border-gray-300 shadow-sm", placeholder: "email" %>
            </div>
            <div class="mb-3">
                <%= form.password_field :password, class: "rounded-md w-full border-gray-300 shadow-sm", placeholder: "password" %>
            </div>
        </div>
        <div class="mb-3">
            <%= form.submit "Sign In", class: "shadow-sm border border-gray-400 px-4 py-2 rounded-md font-bold hover:bg-gray-100 ease-in-out duration-200" %>
        </div>
    <% end %>
</div>